<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
        <%= link_to "Followings", followings_user_path(@user) %> 
        <%= link_to @user.following_users.count, followings_user_path(@user) %><br>
        <%= link_to "Followers", followers_user_path(@user) %>   
        <%= link_to @user.follower_users.count, followers_user_path(@user) %>
      </p>
    </section>
  </aside>
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
        <%= paginate @microposts %> <!--pagenate-->
      </ol>
    <% end %>
    
  </div>
</div>